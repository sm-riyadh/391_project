{
  "name": "Evexplorer",
  "version": "1.0.0",
  "description": "Event Exploring Website",
  "main": "./src/main.js",
  "author": "SM Riyadh",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon ./src/main.js",
    "build:client": "cross-env TAILWIND_MODE=build vite build --outDir dist/client  --ssrManifest",
    "build:server": "cross-env TAILWIND_MODE=build vite build --outDir dist/server --ssr src/main.js ",
    "serve": "vite preview",
    "start": "concurrently \"nodemon ./src/main.js\", \"yarn run tailwind:css\"",
    "tailwind:css": "postcss -w ./src/style/main.css -o ./dist/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dateformat": "^5.0.3",
    "ejs": "^3.1.8",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "flowbite": "^1.5.2",
    "mongoose": "^6.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "postcss": "^8.1.2",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8"
  }
}
